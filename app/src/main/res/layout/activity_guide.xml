<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="guideVM"
            type="com.darly.std.vm.GuideViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_guide_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6" />
            

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/loading_guide"
                android:textColor="@color/color_test"
                android:textSize="@dimen/sp18" />

            <ProgressBar
                android:id="@+id/id_main_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp15"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp10"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/progress_hor_fill"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </RelativeLayout>

</layout>

